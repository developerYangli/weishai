/** global weui article **/

.articles{
  background-color: #fff;
}
.article__item{
  display: flex;
  padding: 12rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.article__thumb{
  width:4.2rem;
  height: 3rem;
  margin-right: 0.6rem;
}
.article__image{
  width:4.2rem;
  height: 3rem;
}
.article__info{
  flex: 1;
  width: 100%;
  overflow: hidden;
}
.article__title{
  font-weight: 40;
  font-size: 26rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  width: 100%;
  margin-bottom: 10rpx;
}
/* 支持多行 */
.article__title__large{
  
}

.article__desc{
  color: #999;
  font-size: 24rpx;
  line-height: 1;
  width: 100%;
  margin-bottom: 10rpx;
}

.article__item__cover{
  display: block;
}
.article__cover{
  padding-bottom: 10rpx;
  overflow: hidden;
}
.article__ad{
  width: 100%;
  height: 4rem;
  border-radius: 10rpx;
}

.article__remark{
  bottom: 0;
  width: 20rem;
  display: block;
  font-size: 28rpx;
}

.article__source{
  color:#d81e06;
  border:1rpx solid #d81e06;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  margin-right: 20rpx;
}


.article__time{
  margin-right: 10rpx;
}
.article__count{
  flex-direction:row;
  display: flex;
  justify-content:space-between;
  color:#333;
  font-size: 20rpx;
  font-weight: 500;
  margin-bottom: 13rpx;
}

.article__icon{
  width: 29rpx;
  height: 29rpx;
  margin-left: 15rpx;
  margin-right: 6rpx;
}

.article__imgview{
  width: 200rpx;
  height: 142rpx;
  padding: 15rpx;
}
